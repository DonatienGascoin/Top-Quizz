<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="6"
    android:clickable="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:background="@drawable/background"
    android:scaleType="center">
    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:elevation="4dp" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/my_toolbar">
    </LinearLayout>
    <LinearLayout
        android:id="@+id/divFriends"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_weight="4"
        android:weightSum="30"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:padding="16dp">
                    <TextView
                        android:id="@+id/firstLetterPseudo"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="M"
                        android:textColor="@color/colorBlack"
                        android:background="@drawable/edit_text_design"
                        android:textSize="60dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:weightSum="2"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="Maxence"
                    android:id="@+id/pseudoUserProfil"
                    android:textStyle="normal|bold"
                    android:textSize="30sp"
                    android:textColor="@color/colorBlack"
                    android:padding="15dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:id="@+id/nbQuizzUserProfil"
                    android:text="Quizz : 25"
                    android:textStyle="normal|bold"
                    android:textSize="20sp"
                    android:textColor="@color/colorWhite"
                    android:padding="15dp" />
            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorWhite" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="S'entraÃ®ner sur les quiz de mon ami :"
            android:textStyle="normal|bold"
            android:textSize="18sp"
            android:textColor="@color/colorBlack"
            android:background="@color/colorWhite" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/listQuizzContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2">
            <ListView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/listQuizzFriend"
                android:gravity="center" />
    </LinearLayout>
</LinearLayout>